.col-xs-12.col-sm-6.my-3
  %a.btn-small-announce{id: "small_announce_#{@announce.id}", data-announce-id: "#{@announce.id}", name: "small_announce_#{@announce.id}", href: "#"}
    .card.card-offer
      .card-body
        .row
          .col-6
            = img_tag BoncoinWeb.AnnounceView.image_url(List.first(@announce.images), :original), class: "img-small"
          .col-6.p-0
            .title
              %h6.font-weight-bold.text-dark.m-0= LayoutView.convert_zawgyi(@announce.title)
              %h6.text-primary.m-0= BoncoinWeb.AnnounceView.show_price(@announce.price, @announce.currency)
            .details
              %p.text-dark.m-0= LayoutView.convert_zawgyi(@announce.township.division, "title")
              %p.text-dark.m-0= LayoutView.convert_zawgyi(@announce.township, "title")
              %p.text-dark.m-0{style: "font-size:0.75em;"}= BoncoinWeb.AnnounceView.show_date(@announce, "en")
