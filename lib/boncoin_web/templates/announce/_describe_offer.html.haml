= hidden_input @a, :currency, value: "Kyats"
= hidden_input @a, :language, value: Gettext.get_locale()
= hidden_input @a, :zawgyi, value: false
%hr.d-block.d-sm-none
%h5.text-left= gettext "2. Describe your offer"
.row.mt-3
  .col-12
    .form-group
      %select.form-control.selectpicker{data-style: "btn-outline-form", title: gettext("Select item location"), data-size: "8", id: "user_announces_0_township", name: "user[announces][0][township_id]"}
        - for division <- @conn.assigns.select_menus.divisions do
          %optgroup{label: "#{LayoutView.convert_zawgyi(division, "title")}"}
            - for township <- division.townships do
              %option{value: "#{township.id}"}= "#{LayoutView.convert_zawgyi(division, "title")}- #{LayoutView.convert_zawgyi(township, "title")}"
  .col-12
    .form-group
      %select.form-control.selectpicker{data-style: "btn-outline-form", title: gettext("Select a category"), data-size: "8", id: "user_announces_0_category", name: "user[announces][0][category_id]"}
        - for family <- @conn.assigns.select_menus.familys do
          %optgroup{label: "#{LayoutView.convert_zawgyi(family, "title")}", data-icon: "mr-1 fa fa-#{family.icon}"}
            - for category <- family.categorys do
              %option{value: "#{category.id}", data-icon: "mr-1 fa fa-#{category.icon}"}= "#{LayoutView.convert_zawgyi(category, "title")}"
  .col-12
    .form-group
      .form-group.text-left
        .input-group
          %span.input-group-prepend
            .input-group-text.bg-transparent
              %i.fa.fa-font
          = text_input @a, :title, class: "form-control", autocomplete: "nope", placeholder: gettext("Title")
  .col-12
    .form-group
      .input-group
        .input-group-prepend
          .input-group-text.bg-transparent
            %i.fa.fa-tag
        = text_input @a, :price, class: "form-control", autocomplete: "nope", placeholder: gettext("Price")
        .input-group-append
          %button.btn.btn-form{id: "choosen_currency_text", type: "button"}= gettext("Kyats")
          %button.btn.btn-form.dropdown-toggle.dropdown-toggle-split{type: "button", data-toggle: "dropdown", aria-haspopup: "true", aria-expanded: "false"}
          .dropdown-menu
            .dropdown-item.ddown_change_currency= gettext("Kyats")
            .dropdown-item.ddown_change_currency= gettext("Lacks")
            .dropdown-item.ddown_change_currency= gettext("USD")
