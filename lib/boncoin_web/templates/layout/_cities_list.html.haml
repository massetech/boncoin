.dropdown.my-2
  %button.btn.btn-lg.btn-block.btn-outline-dark.dropdown-toggle{type: "button", data-toggle: "dropdown", aria-haspopup: "true", aria-expanded: "false"}
    %i.fa.fa-map-marker.btn-icon
    %span= gettext "Search in your area"
  %ul.dropdown-menu.multi-level{role: "menu", aria-labelledby; "dropdownMenu"}
    %li= link gettext("All Myanmar"), to: public_offers_path(@conn, :public_index), class: "dropdown-item"
    %li.divider
    - for division <- @conn.assigns.select_menus.divisions do
      %li.dropdown-submenu
        %a.dropdown-item.submenu-item-hover{tabindex: "-1", href: "#"}
          = division.title_en
        %ul.dropdown-menu
          %li= link gettext("All %{division_title}", division_title: division.title_en), to: public_offers_path(@conn, :public_index, search: %{division_id: "#{division.id}"}), class: "dropdown-item"
          %li.divider
          - for township <- division.townships do
            %li= link "#{township.title_en}", to: public_offers_path(@conn, :public_index, search: %{division_id: "#{division.id}", township_id: "#{township.id}"}), class: "dropdown-item"
            %li.divider
      %li.divider
