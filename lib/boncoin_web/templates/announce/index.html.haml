%nav{aria-label: "breadcrumb"}
  %ol.breadcrumb
    %li.breadcrumb-item= link "Dashboard", to: main_path(@conn, :dashboard)
    %li.breadcrumb-item.active{aria-current: "page"}= "Offers"

.table-responsive
  %table.table.table-hover
    %caption= "Offers"
    %thead
      %tr
        %th= "ID"
        %th= "User phone"
        %th= "User name"
        %th= "Viber"
        %th= "Language"
        %th= "Division"
        %th= "Township"
        %th= "Category"
        %th= "Title"
        %th= "Price"
        %th= "Currency"
        %th= "Status"
        %th= "Nb view, clic, alert"
        %th= "Creation"
        %th= "Parution"
        %th= "Validity"
        %th= "Actions"
    %tbody
      - for offer <- @announces do
        %tr
          %td= offer.id
          %td= offer.user.phone_number
          %td= offer.user.nickname
          %td= LayoutView.icon_active(offer.user.viber_active)
          %td= img_tag static_path(@conn, "/fonts/#{offer.language}.svg"), class: "flag-small"
          %td= offer.township.division.title_en
          %td= offer.township.title_en
          %td
            %i.fa{class: "fa-#{offer.category.icon}"}
          %td= offer.title
          %td= Kernel.round(offer.price)
          %td= offer.currency
          %td
            - link to: announce_path(@conn, :show, offer) do
              = btn_status(offer.status)
          %td= "#{offer.nb_view}, #{offer.nb_clic}, #{offer.nb_alert}"
          %td= "#{offer.inserted_at.year}/#{offer.inserted_at.day}/#{offer.inserted_at.hour}-#{offer.inserted_at.month}:#{offer.inserted_at.minute}"
          %td= LayoutView.format_datehour(offer.parution_date)
          %td= LayoutView.format_date(offer.validity_date)
          %td
            - if @conn.assigns.current_user.role == "SUPER" do
              = link "Delete", to: announce_path(@conn, :delete, offer), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-outline-danger btn-sm"
