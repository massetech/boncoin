%hr.d-block.d-sm-none
%h5.text-left= gettext "1. Fill your details"
.row.text-left.mt-3.mb-3
  .col-8
    .input-group
      %span.input-group-prepend
        .input-group-text.bg-white
          %i.fa.fa-phone
      = text_input @u, :phone_number, class: "form-control", autocomplete: "nope", placeholder: gettext("Main phone number")
    %small.form-text.text-muted{id: "phone_helper"}= gettext "Myanmar mobile only (09000000000)"
  .col-4
    %button.btn.btn-primary.text-secondary.font-weight-bold.btn-block.m-0{id: "btn_validate_number", drab-click: "read_user_details", data-item-id: ""}= "OK"
    %button.btn.btn-secondary.font-s-9.btn-block.m-0.d-none{id: "btn_change_number", drab-click: "read_user_details", data-item-id: ""}= gettext("change")
.row.text-left.collapse.collapsible_form
  .col-12
    .form-group
      .input-group
        %span.input-group-prepend
          .input-group-text.bg-transparent
            %i.fa.fa-user
        = text_input @u, :nickname, class: "form-control", maxlength: "20",autocomplete: "nope", placeholder: gettext("Name or nickname")
  .col-12
    -# .row.text-left.collapse.collapsible_form
    -#   .col-12
    .row{id: "field-viber"}
      .col-8.d-flex.align-items-center
        = img_tag static_path(@conn, "/images/viber_icon.png"), class: "btn-icon"
        %p.m-0.ml-2= gettext "This number is linked to Viber"
      -# Button to unlink Viber
      .col-4
        %button.btn.btn-secondary.font-s-9.btn-block.m-0= gettext("unlink")
    -# Button to link Viber
    - link to: main_path(@conn, :viber), id: "btn-viber", class: "btn btn-block", target: "_blank" do
      .row.align-items-center
        .col-2
          = img_tag static_path(@conn, "/images/viber_icon.png"), class: "btn-icon"
        .col-10
          %span= gettext "Link this number to Viber"
          %p.m-0= gettext "to receive notifications"
