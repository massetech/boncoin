.carousel.slide.w-100{id: "images_carousel_#{@announce.id}", data-ride: "carousel"}
  .carousel-inner
    - for image <- @announce.images do
      .carousel-item
        = img_tag BoncoinWeb.AnnounceView.image_url(image, :original), class: "w-100"
  %ol.carousel-indicators
    - for i <- 1..length(@announce.images) do
      %li{data-target: "#caroussel_img", data-slide-to: "#{i}"}

  %a.carousel-control-prev{href: "#images_carousel_#{@announce.id}", role: "button", data-slide: "prev"}
    %span.carousel-control-prev-icon{aria-hidden: "true"}
    %span.sr-only= "Previous"
  %a.carousel-control-next{href: "#images_carousel_#{@announce.id}", role: "button", data-slide: "next"}
    %span.carousel-control-next-icon{aria-hidden: "true"}
    %span.sr-only= "Next"

