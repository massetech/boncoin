.row.m-0.mt-3.offer-actions{id: "offer_actions_#{@announce.id}"}
  .col-4.m-0.p-0
    -# .d-flex.justify-content-between.align-items-center
    -# Button see number
    %button.btn.btn-sm.btn-block.d-flex.flex-column.justify-content-center.align-items-center.btn-success.btn-show-number{id: "btn_show_number_#{@announce.id}", data-offer-id: "#{@announce.id}"}
      %i.fa.fa-phone.btn-icon
      %span.font-s-8= gettext "Number"
  .col-4.m-0.p-0
    -# Button report abuse
    %button.btn.btn-sm.btn-block.d-flex.flex-column.justify-content-center.align-items-center.btn-warning.btn-offer-alert{id: "btn_alert_#{@announce.id}", data-offer-id: "#{@announce.id}"}
      %i.fas.fa-exclamation-triangle.btn-icon
      %span.font-s-8= gettext "Report"
  .col-4.m-0.p-0
    -# Button like
    %button.btn.btn-sm.btn-block.d-flex.flex-column.justify-content-center.align-items-center.btn-secondary.btn-offer-like{id: "btn_like_#{@announce.id}", data-offer-id: "#{@announce.id}"}
      %i.fa.fa-heart.btn-icon
      %span.font-s-8= gettext "Save"

.row.m-0.mt-3.offer-contact.d-none{id: "offer_contact_#{@announce.id}"}

  .col-xs-12.my-3.p-0
    -# Show the sellor's number
    %button.btn.btn-lg.btn-block.btn-secondary.d-flex.justify-content-center.align-items-center.copy-number{data-phone-number: "#{@announce.user.phone_number}"}
      %i.fa.fa-phone.btn-icon-left
      = render "_phone_number.html", phone_number: @announce.user.phone_number
      %i.fa.fa-copy.bg-white.text-secondary.btn-copy-number.btn-icon-right

  - if @announce.user.viber_number != nil do
    -# Show the button to open Viber conversation
    .col-xs-12.p-0
      - if Browser.mobile?(@conn) do
        %a.btn.btn-lg.btn-block.btn-outline-secondary.d-flex.justify-content-center.align-items-center{href: "viber://contact?number=%2B95#{String.slice(@announce.user.viber_number, 1..-1)}"}
          %i.icon-big.fab.fa-viber.btn-icon-left
          = render "_phone_number.html", phone_number: @announce.user.viber_number
        %a.btn.btn-lg.btn-block.btn-outline-secondary.d-flex.justify-content-center.align-items-center{href: "viber://chat/?number=%2B95#{String.slice(@announce.user.viber_number, 1..-1)}"}
          %i.icon-big.fab.fa-viber.btn-icon-left
          = render "_phone_number.html", phone_number: @announce.user.viber_number
      - else
        %button.btn.btn-lg.btn-block.btn-outline-secondary.d-flex.justify-content-center.align-items-center.copy-number{data-phone-number: "95#{String.slice(@announce.user.viber_number, 1..-1)}"}
          %i.icon-big.fab.fa-viber.btn-icon-left
          = render "_phone_number.html", phone_number: "95#{String.slice(@announce.user.viber_number, 1..-1)}"
          %i.fa.fa-copy.bg-secondary.text-white.btn-copy-number.btn-icon-right
